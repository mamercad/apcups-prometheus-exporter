[Unit]
Description=Prometheus Exporter for APC UPSs
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=always
RestartSec=1
User=nobody
Group=nobody
ExecStart=/opt/apcups-prometheus-exporter/venv/bin/python3 /usr/local/bin/prometheus_apcups_exporter.py

[Install]
WantedBy=multi-user.target
